<div class="user-profile">
  <div class="icon text-center">
    <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
  <div class="status text-center">
    <ul>
      <li>
        <div class="status-label">FOLLOW</div>
        <div id="follow_count" class="status-value">
          <%= @count_followings %>
        </div>
      </li>
      <li>
        <div class="status-label">WANT</div>
        <div id="want_count" class="status-value">
          <%= @count_want %>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="wantfollow-profile">
  <div class="follow-status text-center">
    <%= render 'mypages/followings', users: @followings %>
  </div>
  <div class="want-status text-center">
    <%= render 'items/items', items: @items %>
  </div>
</div>
