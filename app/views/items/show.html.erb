<div class="row">
  <div class="col-md-3 col-sm-6 col-xs-12 col-md-offset-3">
    <div class="item">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <p class="item-title"><%= @item.name %></p>
        </div>
        <div class="panel-body">
          <p class="item-detail"><%= @item.detail %></p>
          <div class="buttons text-center">
            <% if logged_in? %>
              <% unless current_user == @user %>
                <%= render 'ownerships/want_button', item: @item %>
              <% else %>
                <%= link_to "Edit", edit_item_path(@item), class: 'btn btn-default btn-xs' %>
                <%= link_to "Delete", @item, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="want-users">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          Wantしたユーザ
        </div>
        <div class="panel-body">
          <% @want_users.each do |user| %>
            <%= link_to user.name, user_path(user) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>